<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.brandsDetail.BrandDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/promotions_banner"
            android:id="@+id/fragment_ads_home_brand_detail_banner_id"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_14sdp"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="@dimen/_10sdp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--                    <ImageView-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="@dimen/_200sdp"-->
                <!--                        android:scaleType="fitXY"-->
                <!--                        android:src="@drawable/toyota_layer1"/>-->

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/fragment_brand_detail1_image_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_200sdp"
                    app:iss_auto_cycle="true"
                    app:iss_period="1000"
                    android:background="@color/white"
                    app:iss_selected_dot="@drawable/md_transparent"
                    app:iss_unselected_dot="@drawable/md_transparent"
                    app:iss_delay="0"/>

                <TextView
                    android:id="@+id/fragment_ads_home_brand_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/red"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Toyota"/>

                <TextView
                    android:id="@+id/fragment_ads_home_brand_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/shopee_black"
                    android:text="@string/lorem_ipsum_text"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fragment_ads_home_brand_detail_web_icon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/web_icon"/>

                    <ImageView
                        android:id="@+id/fragment_ads_home_brand_detail_youtube_icon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/youtube_icon"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
<!--        -->

<!--    </ScrollView>-->

</ScrollView>