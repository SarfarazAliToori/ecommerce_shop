<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopee" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <!-- Customize your theme here. -->
        !--        actionIconStyle-->
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>

        //API 29 and above (While Pasting the code delete this comment)
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="myActionButtonStyle" parent="Theme.Shopee">
        <item name="android:minWidth">@dimen/_30sdp</item>
        <item name="android:maxWidth">@dimen/_30sdp</item>
        <item name="android:height">@dimen/_30sdp</item>
        <item name="android:width">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_40sdp</item>
    </style>

    <!--    navigation  custom style-->
    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>
</resources>